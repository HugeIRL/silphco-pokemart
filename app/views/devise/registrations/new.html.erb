<%= javascript_pack_tag 'cities' %>
<%= javascript_pack_tag 'form-validation' %>

<h2 class="mb-5 mt-3">Create an Account</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'needs-validation', novalidate: 'novalidate' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", required: true, class: "form-control" %>
          <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please enter your first name.
          </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="mb-3">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", required: true, class: "form-control" %>
          <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please enter your last name.
          </div>
      </div>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "form-control" %>
    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    <div class="valid-feedback">
      Looks good!
    </div>
    <div class="invalid-feedback">
      Please enter a valid email.
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :address %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "123 Silph Road", required: true, class: "form-control" %>
    <div class="valid-feedback">
      Looks good!
    </div>
    <div class="invalid-feedback">
      Please enter your address.
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <div class="mb-3">
        Province<br />
        <%= f.collection_select :province_id, Province.order(:name), :id, :name, {:prompt => "Choose..." }, autofocus: true, autocomplete: "province_id", required: true, class: "form-select" %>
        <div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          Please select a valid province.
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="mb-3">
        City<br />
        <%= f.grouped_collection_select :city_id, Province.order(:name), :cities, :name, :id, :name, {:prompt => "Choose..." }, autofocus: true, autocomplete: "city_id", required: true, class: "form-select" %>
        <div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          Please select a valid city.
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="mb-3">
        <%= f.label :postal_code %><br />
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", required: true, class: "form-control" %>
        <div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          Please enter a valid postal code.
        </div>
      </div>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    <div class="valid-feedback">
      Looks good!
    </div>
    <div class="invalid-feedback">
      Please enter a valid password.
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Create Account", class: "btn btn-primary mb-2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>